<div class="guide-tip-template2">
    <div>
        <% if (locals.image) { %>
            <div class="guide-image">
                <img src="<%= locals.image %>" alt="" />
            </div>
            <% } %>
                <div class="guide-message">
                    <h3>
                        <% if(locals.title){ %>
                            <% } %>
                                <%= locals.title %>
                    </h3>
                    <p>
                        <% if(locals.text){ %>
                            <% } %>
                                <%= locals.text %>
                    </p>
                    <% if(locals.href){ %>
                        <a href="locals.href">locals.hrefText</a>
                        <% } %>

                </div>
    </div>

</div>